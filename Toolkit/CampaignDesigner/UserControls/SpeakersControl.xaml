<UserControl x:Class="CampaignDesigner.UserControls.SpeakersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignDesigner.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Gray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Content="Add or Remove Speakers" Foreground="White"/>
            <Button x:Name="AddSpeakerButton" Content="Add Speaker" Click="AddSpeakerButton_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="SpeakersPanel" Margin="5"/>
        </ScrollViewer>

    </Grid>
</UserControl>
